{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "R-Type Settings",
  "oneOf": [
    {
      "description": "Rich settings format (graphics/audio)",
      "type": "object",
      "required": ["version", "graphics", "audio"],
      "properties": {
        "version": { "type": "integer" },
        "graphics": {
          "type": "object",
          "properties": {
            "resolution": { "type": "string", "pattern": "^[0-9]+x[0-9]+$" },
            "vsync": { "type": "boolean" },
            "fullscreen": { "type": "boolean" }
          },
          "required": ["resolution"]
        },
        "audio": {
          "type": "object",
          "properties": {
            "master": { "type": "number", "minimum": 0, "maximum": 1 },
            "music": { "type": "number", "minimum": 0, "maximum": 1 },
            "effects": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    {
      "description": "Simple settings format used in `saves/settings.json`",
      "type": "object",
      "properties": {
        "musicVolume": { "type": "number" },
        "soundVolume": { "type": "number" },
        "uiScale": { "type": "number" }
      },
      "required": ["musicVolume", "soundVolume", "uiScale"],
      "additionalProperties": true
    }
  ]
}
